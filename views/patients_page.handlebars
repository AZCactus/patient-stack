
{{> nav }}
<!--HEADER-->
<div class="ui main container">
    <div class="row">
        <div class="ui basic blue button">Log Out</div>
    </div>
    <div class="row">
        <div class="ui items">
            <div class="item">
                <div class="ui tiny image">
                    <img class="image" src="{{patient.image}}">
                </div>
                <div class="content">
                    <a class="header">{{patient.first_name}} {{patient.last_name}}</a>
                    <div class="description">
                        <ul>
                            <li>Address: {{patient.street_address}}</li>
                            <li>{{patient.city}}, {{patient.state}}, {{patient.zip}}</li>
                            <li>Phone: {{patient.telephone}}</li>
                            <li>Height: {{patient.height}}</li>
                            <li>Weight: {{patient.weight}}</li>
                        </ul>
                    </div>
                    <div class="extra">
                        <ul>
                            <li>Emergency Contact: {{patient.emergency_contact_name}}</li>
                            <li>Emergency Contact Number: {{patient.emergency_contact_number}}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--row-->
    <div class="ui divider"></div>
    <div class="ui stackable grid">
        <div class="row">
            {{> labresults}}
        </div>
        <div class="row">
            <table class="ui red celled table">
                <thead>
                    <tr>
                        <th>Test</th>
                        <th>Status</th>
                        <th>Results</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>White Blood Count</td>
                        <td>Pending</td>
                        <td class="negative"><i class="icon close"></i>Unknown</td>
                    </tr>
                    <tr class="positive">
                        <td>Chemistry Panel and Complete Blood Count</td>
                        <td>Complete</td>
                        <td class="positive"><i class="icon checkmark"></i>Within Range</td>
                    </tr>
                    <tr class="positive">
                        <td>C-Reactive Protein</td>
                        <td>Complete</td>
                        <td class="negative"><i class="icon close"></i>Negative</td>
                    </tr>
                    <tr>
                        <td>Hemoglobin A1C</td>
                        <td>Scheduled</td>
                        <td>Unknown</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--row-->
        <div class="row"></div>
