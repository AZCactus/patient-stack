{{!-- nav bar --}}
<div class="ui visible left vertical inverted labeled icon sidebar menu">
    <a class="item"><i class="home icon"></i>Home</a>
    <a class="item"><i class="user circle outline icon"></i>Patients</a>
    <a class="item"><i class="calendar icon"></i>Calendar</a>
    <a class="item" href="/chat"><i class="comment icon"></i>Messaging</a>
    <a class="item"><i class="payment icon"></i>Billing</a>
    <a class="item"><i class="settings icon"></i>Settings</a>
</div>

<div class="main ui grid container" id="main-container">
    <div class="ui container sixteen wide column">
        <h1>My Dashboard > My Patients</h1>
        <h3>Select a patient below.</h3>
    </div>

    <div class="sixteen wide column">
        <table class="ui striped blue one column table" id="table">
            <thead>
                <tr class="sixteen wide column">
                    <th class="two wide column">Image</th>
                    <th class="four wide column">Name</th>
                    <th class="two wide column">Gender</th>
                    <th class="four wide column">Provider</th>
                    <th class="four wide column">Next Appt</th>
                </tr>
            </thead>
            <tbody>

                {{#each patient}}
                <tr class="sixteen wide column" id={{this.id}}>
                    <td class="two wide column"><img class="ui avatar image" src="{{this.image}}"></td>
                    <td class="four wide column"><a href="/patients/{{this.id}}">{{this.first_name}} {{this.last_name}}</a></td>
                    <td class="two wide column">M</td>
                    <td class="four wide column">{{this.provider_name}}</td>
                    <td class="four wide column">September 2, 2017</td>
                </tr>

                {{/each}}
            </tbody>
        </table>
        <div class="ui basic buttons">
            <div class="ui right button">
                <a href="/patients/add">Add Patient</a>
            </div>
        </div>
    </div>
</div>


